<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@color/trueTeal">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="85dp"
        android:src="@mipmap/play_moor"
        android:id="@+id/listItemManualPlay"
        android:layout_marginTop="15dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/listItemManualTitle"
        android:layout_toRightOf="@+id/listItemManualPlay"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/morningOnTheMoor"
        android:textSize="25dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_alignBottom="@+id/listItemManualPlay"
        android:layout_alignTop="@+id/listItemManualPlay"
        android:gravity="center_vertical"
        android:paddingLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MM 16"
        android:textColor="@color/ladyOphelia"
        android:id="@+id/listItemManualMMText"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingTop="7dp"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp" />
</RelativeLayout>